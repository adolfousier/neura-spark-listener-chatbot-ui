# Required: At least one API key
VITE_GROQ_API_KEY=your_groq_api_key_here

# Optional with defaults
VITE_PORT=4173
VITE_BOXED_CHATBUBBLE_MODE_ENABLED=true
CONTAINER_NAME=neura_ai_open_source_chatbot_ui_v0.2.6
CHAT_ARENA_ENABLED=false # true if boxed bubble if false

# Backend Service Configuration
VITE_BACKEND_SERVICE_PROVIDER=groq  # Options: groq, neura, openai, claude, google, openrouter, flowise
VITE_GROQ_API_MODEL=deepseek-r1-distill-llama-70b  # Default model for Groq
VITE_STREAM_ENABLED=true  # Enable/disable streaming responses
VITE_REASONING_FORMAT=parsed  # Format for AI reasoning (parsed, raw, or hidden)

# Default Messages
DEFAULT_SYSTEM_PROMPT="You are NEURA AI, a multi-service chat interface that can answer questions and help with tasks. Do not use apologetics or religious language. When creating diagrams, always use mermaid syntax wrapped in markdown code blocks with the mermaid language identifier (```mermaid), ensure diagrams start with a valid type (graph TD, flowchart TD, sequenceDiagram, classDiagram, etc.) and use proper syntax for nodes and connections with balanced brackets and correct arrow syntax (--> )."
DEFAULT_WELCOME_MESSAGE="Hello! I'm your AI assistant. How can I help you today?"

# Neura AI Configuration
VITE_NEURA_ROUTER_API_KEY=your_neura_api_key_here
VITE_NEURA_ROUTER_API_URL=https://api.meetneura.ai/v1/router/chat/completions

# Flowise Configuration
VITE_FLOWISE_API_URL=https://your-flowise-instance.com/api/v1/prediction/
VITE_FLOWISE_CHATFLOW_ID=your_chatflow_id_here
VITE_FLOWISE_API_KEY=your_flowise_api_key_here

# OpenRouter Configuration
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here
VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
VITE_OPENROUTER_HTTP_REFERER=https://your-domain.com
VITE_OPENROUTER_X_TITLE=YourAppName

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude Configuration
VITE_CLAUDE_API_KEY=your_claude_api_key_here

# Google AI Configuration
VITE_GOOGLE_API_KEY=your_google_api_key_here
VITE_GOOGLE_API_URL=https://generativelanguage.googleapis.com
VITE_GOOGLE_API_MODEL=gemini-2.5-pro-exp-03-25

# Database Configuration
DATABASE_URL="file:./db/dev.db"

# Azure Storage Configuration (Optional)
VITE_AZURE_STORAGE_CONTAINER_ID=your_container_name
VITE_AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
VITE_AZURE_STORAGE_SAS_TOKEN=your_sas_token_here

# Speech-to-Text and Text-to-Speech Configuration (Optional)
VITE_OPENAI_TTS_API_MODEL=tts-1
VITE_OPENAI_TTS_API_VOICE=shimmer
VITE_GROQ_STT_API_MODEL=whisper-large-v3-turbo