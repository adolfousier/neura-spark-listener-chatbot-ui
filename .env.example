# ===========================================
# SECURE CONFIGURATION - NO BROWSER EXPOSURE
# ===========================================
# IMPORTANT: These API keys are now server-side only!
# Remove VITE_ prefix to keep them secure from browser exposure

# Server Configuration
PORT=3001
NODE_ENV=development

# Required: At least one API key (SERVER-SIDE ONLY - NO VITE_ PREFIX!)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
NEURA_ROUTER_API_KEY=your_neura_api_key_here
FLOWISE_API_KEY=your_flowise_api_key_here

# Client-Side Configuration (Safe to expose with VITE_ prefix)
VITE_PORT=4173
VITE_BOXED_CHATBUBBLE_MODE_ENABLED=true
CONTAINER_NAME=neura_ai_open_source_chatbot_ui_v0.2.6
CHAT_ARENA_ENABLED=false # true if boxed bubble if false

# Backend Service Configuration (Client-side settings)
VITE_BACKEND_SERVICE_PROVIDER=groq  # Options: groq, neura, openai, claude, google, openrouter, flowise
VITE_GROQ_API_MODEL=deepseek-r1-distill-llama-70b  # Default model for Groq
VITE_STREAM_ENABLED=true  # Enable/disable streaming responses
VITE_REASONING_FORMAT=parsed  # Format for AI reasoning (parsed, raw, or hidden)
VITE_BASE_URL=http://localhost:4173  # Base URL for the frontend (use your domain in production)
VITE_API_BASE_URL=http://localhost:4174  # Backend API base URL

# Default Messages
DEFAULT_SYSTEM_PROMPT="You are NEURA AI, a multi-service chat interface that can answer questions and help with tasks. Do not use apologetics or religious language. When creating diagrams, always use mermaid syntax wrapped in markdown code blocks with the mermaid language identifier (```mermaid), ensure diagrams start with a valid type (graph TD, flowchart TD, sequenceDiagram, classDiagram, etc.) and use proper syntax for nodes and connections with balanced brackets and correct arrow syntax (--> )."
DEFAULT_WELCOME_MESSAGE="Hello! I'm your AI assistant. How can I help you today?"

# API URLs (Server-side only)
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
CLAUDE_API_URL=https://api.anthropic.com/v1/messages
GOOGLE_API_URL=https://generativelanguage.googleapis.com
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
NEURA_ROUTER_API_URL=https://api.meetneura.ai/v1/router/chat/completions
FLOWISE_API_URL=https://your-flowise-instance.com/api/v1/prediction/

# Provider-specific Configuration (Server-side only)
FLOWISE_CHATFLOW_ID=your_chatflow_id_here
OPENROUTER_HTTP_REFERER=https://your-domain.com
OPENROUTER_X_TITLE=YourAppName
GOOGLE_API_MODEL=gemini-2.5-pro-exp-03-25

# Database Configuration
DATABASE_URL="file:./db/dev.db"

# Azure Storage Configuration (SERVER-SIDE ONLY - SAS tokens are sensitive!)
AZURE_STORAGE_CONTAINER_ID=your_container_name
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_SAS_TOKEN=your_sas_token_here

# Speech-to-Text and Text-to-Speech Configuration (Server-side only)
OPENAI_TTS_API_MODEL=tts-1
OPENAI_TTS_API_VOICE=shimmer
GROQ_STT_API_MODEL=whisper-large-v3-turbo